<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Lavender"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/redCircle"
        android:layout_width="@dimen/circle2"
        android:layout_height="@dimen/circle2"
        android:src="@drawable/circle"
        android:padding="@dimen/paddingInsideCircle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/yellowCircle"
        android:layout_width="@dimen/circle2"
        android:layout_height="@dimen/circle2"
        android:src="@drawable/circle"
        android:padding="@dimen/paddingInsideCircle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/redCircle"/>

    <ImageView
        android:id="@+id/greenCircle"
        android:layout_width="@dimen/circle2"
        android:layout_height="@dimen/circle2"
        android:src="@drawable/circle"
        android:padding="@dimen/paddingInsideCircle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yellowCircle"/>

    <Button
        android:id="@+id/changeColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textButtonChangeColor"
        android:textSize="@dimen/textForButton"
        android:backgroundTint="#191970"
        android:layout_margin="10dp"
        android:padding="20dp"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greenCircle"/>
</androidx.constraintlayout.widget.ConstraintLayout>